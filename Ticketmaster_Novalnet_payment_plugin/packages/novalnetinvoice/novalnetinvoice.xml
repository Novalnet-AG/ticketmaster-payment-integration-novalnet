<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="rdmedia" method="upgrade">
    <name>Novalnet Invoice</name>
    <author>Novalnet</author>
    <creationDate>September 2016</creationDate>
    <copyright>Novalnet</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>info@novalnet.de</authorEmail>
    <authorUrl>https://www.novalnet.de</authorUrl>
    <version>2.0.0</version>
    <description>Novalnet Payment Provider</description>
        <files>
            <folder>languages</folder>
            <folder>rdmedia_novalnetinvoice</folder>
            <filename plugin="novalnetinvoice">novalnetinvoice.php</filename>
        </files>
        <languages>
            <language tag="en-GB">languages/en-GB/en-GB.plg_rdmedia_novalnetinvoice.ini</language>
            <language tag="de-DE">languages/de-DE/de-DE.plg_rdmedia_novalnetinvoice.ini</language>
        </languages>
        <config>
            <fields name="params">
                <fieldset name="basic">
                    <field name="test_mode" type="list"
                        default=""
                        description="PLG_NOVALNETINVOICE_TESTMODE_DESC"
                        label="PLG_NOVALNETINVOICE_TESTMODE" >
                        <option value="0">PLG_NOVALNETINVOICE_FALSE</option>
                        <option value="1">PLG_NOVALNETINVOICE_TRUE</option>
                    </field>
                    <field name="payment_period" type="text"
                        default=""
                        size="40"
                        description="PLG_NOVALNETINVOICE_PAYMENT_PERIOD_DESC"
                        label="PLG_NOVALNETINVOICE_PAYMENT_PERIOD"
                    />
                    <!--<field name="guarantee_invoice" type="list"
                        default=""
                        description="PLG_NOVALNETINVOICE_GUARANTEE_DESC"
                        label="PLG_NOVALNETINVOICE_GUARANTEE">
                        <option value="0">PLG_NOVALNETINVOICE_FALSE</option>
                        <option value="1">PLG_NOVALNETINVOICE_TRUE</option>
                    </field>
                    <field name="guarantee_invoice_force" type="list"
                        default=""
                        description="PLG_NOVALNETINVOICE_GUARANTEE_FORCE_DESC"
                        label="PLG_NOVALNETINVOICE_GUARANTEE_FORCE">
                        <option value="0">PLG_NOVALNETINVOICE_FALSE</option>
                        <option value="1">PLG_NOVALNETINVOICE_TRUE</option>
                    </field>-->
                    <field name="invoice_fraud_prevention" type="list"
						default =""
						description = "PLG_NOVALNETINVOICE_FRAUD_PREVENTION_DESC"
						label = "PLG_NOVALNETINVOICE_FRAUD_PREVENTION">
						<option value="NONE">PLG_NOVALNETINVOICE_FRAUD_PREVENTION_OPTION1</option>
						<option value="CALLBACK">PLG_NOVALNETINVOICE_FRAUD_PREVENTION_OPTION2</option>
						<option value="SMS">PLG_NOVALNETINVOICE_FRAUD_PREVENTION_OPTION3</option>
					</field>
					<field name="invoice_fraud_prevention_amount_limit" type="text"
						default =""
						size = "15"
						description = "PLG_NOVALNETINVOICE_FRAUD_PREVENTION_GOODS_LIMIT_DESC"
						label = "PLG_NOVALNETINVOICE_FRAUD_PREVENTION_GOODS_LIMIT"
					/>
					<field name="invoice_buyer_notification" type="text"
						default =""
						size = ""
						description = "PLG_NOVALNETINVOICE_BUYER_NOTIFICATION_DESC"
						label = "PLG_NOVALNETINVOICE_BUYER_NOTIFICATION"
					/>
                    <field name="payment_reference_1" type="checkbox"
                        default="1"
                        description=""
                        label="PLG_NOVALNETINVOICE_PAYMENT_REFERENCE_1"
                    />
                    <field name="payment_reference_2" type="checkbox"
                        default="1"
                        description=""
                        label="PLG_NOVALNETINVOICE_PAYMENT_REFERENCE_2"
                    />
                    <field name="payment_reference_3" type="checkbox"
                        default="1"
                        description=""
                        label="PLG_NOVALNETINVOICE_PAYMENT_REFERENCE_3"
                    />
                    <field name="trans_reference_1" type="text"
                        default=""
                        size="15"
                        description="PLG_NOVALNETINVOICE_TRANSACTION_REFERENCE_ID1_DESC"
                        label="PLG_NOVALNETINVOICE_TRANSACTION_REFERENCE_ID1"
                    />
                    <field name="trans_reference_2" type="text"
                        default=""
                        size="15"
                        description="PLG_NOVALNETINVOICE_TRANSACTION_REFERENCE_ID2_DESC"
                        label="PLG_NOVALNETINVOICE_TRANSACTION_REFERENCE_ID2"
                    />
                    <field name="layout" type="list"
                        default=""
                        description="PLG_NOVALNETINVOICE_LAYOUT_DESC"
                        label="PLG_NOVALNETINVOICE_LAYOUT">
                        <option value="0">PLG_NOVALNETINVOICE_HORIZON</option>
                        <option value="1">PLG_NOVALNETINVOICE_VERTICAL</option>
                    </field>
                    <field name="currency" type="list"
                        default=""
                        description="PLG_NOVALNETINVOICE_DESIRED_CURRENCY_INFO"
                        label="PLG_NOVALNETINVOICE_DESIRED_CURRENCY"
                    >
                    <option value="EUR">PLG_NOVALNETINVOICE_EURO</option>
                    <option value="USD">PLG_NOVALNETINVOICE_DOLLAR</option>
                    </field>
                    <field name="failure_tpl" type="text"
                        default=""
                        size="15"
                        description="PLG_NOVALNETINVOICE_FAILED_MESSAGE_DESC"
                        label="PLG_NOVALNETINVOICE_FAILED_MESSAGE"
                    />
                    <field name="success_tpl" type="text"
                        default=""
                        size="15"
                        description="PLG_NOVALNETINVOICE_SUCCESS_MESSAGE_DESC"
                        label="PLG_NOVALNETINVOICE_SUCCESS_MESSAGE"
                    />
                </fieldset>
            </fields>
        </config>
</extension>
